# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.gobang()
GET		/test/:name					controllers.Application.test(name: String)
GET		/gobang/game				controllers.Application.game()
GET		/gobang						controllers.Application.gobang()
GET     /gobang/set/:x/:y		    controllers.Application.setToken(x: Int, y: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)